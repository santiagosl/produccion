{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}

  <main class="main">

      <section class="jumbotron p-1 text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Pagina Principal</h1>
          <p class="lead text-muted">Todos los procesos y control de la producción de las cubiertas</p>
         </div>
      </section>
     
      <div class="album py-5 bg-light">
        <div class="container">
        
          {# PRODUCCION #}
          <div class="row">
         
          {% if is_granted('ROLE_ADMIN') %}
            
            {# VISTA COMO ADMINISTRADOR #}

            {# RESUMEN #}
            <div class="col-md-3">
              <div class="card mb-3 box-shadow">
               <img class="card-img-top" src="./image/resumen.png" alt="resumen">
                <div class="card-body">
                  <p class="card-text">Producción</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                       <a class="btn btn-primary btn-lg btn-block"  href="{{ path('busca_lista_ordenes')}}" ><i class="far fa-eye"></i></a>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>

            {# ALTA CLIENTES #}
            <div class="col-md-3">
              <div class="card mb-3 box-shadow">
              <img class="card-img-top" src="./image/clientes.jpg" alt="cliente">
                <div class="card-body">
                  <p class="card-text">Clientes</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                      <a class="btn btn-primary btn-lg btn-block"  href="{{ path('clientes')}}" ><i class="far fa-eye"></i></a>
                   
                    </div>
                   
                  </div>
                </div>
              </div>
            </div>

        
            {# ALTA USUARIOS #}
            
            <div class="col-md-3">
              <div class="card mb-3 box-shadow">
                <img class="card-img-top" src="./image/alta-usuarios.jpg" alt="alta_usuarios">
                <div class="card-body">
                  <p class="card-text">Usuarios</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                      <a class="btn btn-primary btn-lg btn-block"  href="{{ path('usuarios')}}" ><i class="far fa-eye"></i></a>
                      
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
           

            {# ESTADISTICAS #}
            <div class="col-md-3">
              <div class="card mb-3 box-shadow">
                <img class="card-img-top" src="./image/estadisticas.jpg" alt="estadisticas">
                <div class="card-body">
                  <p class="card-text">Estadísticas</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                      <a class="btn btn-primary btn-lg btn-block"  href="{{ path('estadisticas')}}" ><i class="far fa-eye"></i></a>
                    
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>


          {% else %}

            {# VISTA COMO USUARIO #}
        
            {# RESUMEN #}
            <div class="col-md-4">
              <div class="card mb-3 box-shadow">
               <img class="card-img-top" src="./image/resumen.png" alt="resumen">
                <div class="card-body">
                  <p class="card-text">Producción</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                       <a class="btn btn-primary btn-lg btn-block"  href="{{ path('busca_lista_ordenes')}}" ><i class="far fa-eye"></i></a>
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>

            {# ALTA CLIENTES #}
            <div class="col-md-4">
              <div class="card mb-3 box-shadow">
              <img class="card-img-top" src="./image/clientes.jpg" alt="cliente">
                <div class="card-body">
                  <p class="card-text">Clientes</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                      <a class="btn btn-primary btn-lg btn-block"  href="{{ path('clientes')}}" ><i class="far fa-eye"></i></a>
                   
                    </div>
                   
                  </div>
                </div>
              </div>
            </div>


            {# ESTADISTICAS #}
            <div class="col-md-4">
              <div class="card mb-3 box-shadow">
                <img class="card-img-top" src="./image/estadisticas.jpg" alt="estadisticas">
                <div class="card-body">
                  <p class="card-text">Estadísticas</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group w-100">
                      <a class="btn btn-primary btn-lg btn-block"  href="{{ path('estadisticas')}}" ><i class="far fa-eye"></i></a>
                    
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>

          {% endif %}

          </div>
        </div>
      </div>

  </main>



{% endblock %}