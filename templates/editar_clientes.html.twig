{% extends 'base.html.twig' %}

{% block title %}Editar Clientes{% endblock %}

{% block body %}

    <section class="jumbotron p-1 text-center">
            <div class="container">
            <h1 class="jumbotron-heading">Editar clientes</h1>
            <p class="lead text-muted">Editar los clientes</p>
            </div>
    </section>

   <main>
    <div class="container w-60">

            {{ form_start(formulario) }} 
            <div class="float-left col-md-6">
                {{form_row(formulario.nombre)}} 
            </div>
            <div class="float-right col-md-6">
                {{form_row(formulario.direccion)}} 
            </div>
            <div class="float-left col-md-6">
                {{form_row(formulario.cp)}} 
            </div>
            <div class="float-right col-md-6">
                {{form_row(formulario.poblacion)}} 
            </div>
            <div class="float-left col-md-6">
                {{form_row(formulario.provincia)}} 
            </div>
            <div class="float-right col-md-6">
                {{form_row(formulario.telefono)}} 
            </div>
            <div class="float-left col-md-6">
                {{form_row(formulario.mail)}} 
            </div>
            <div class="float-right col-md-6">
                {{form_row(formulario.cif)}} 
            </div>
            <div class="float-left col-md-6">
                {{form_row(formulario.web)}} 
            </div>

            <div class="float-right col-md-12">
                <button class="btn btn-primary" type="submit">Enviar</button>
                <a class="float-right btn btn-primary fas fa-undo"  href="{{ path('clientes')}}"></a>
            </div>

        {{ form_widget(formulario) }} 
        {{ form_end(formulario) }}


        {# BOTON ATRAS #}
        
    </div>
<main>

</div>

{% endblock %}